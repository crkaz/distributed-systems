<Window x:Class="Client2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Text="{Binding InputText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Click="Button_Click">Translate</Button>
        <TextBox Text="{Binding OutputText, Mode=OneWayToSource}"></TextBox>
    </StackPanel>
</Window>
